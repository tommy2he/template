{
  "name": "koa_template_app",
  "version": "1.5.0",
  "description": "Koa模板应用 - 数据库集成版本",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,json --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "start:dev": "NODE_ENV=development node dist/index.js",
    "start:secure": "NODE_ENV=production node dist/index.js --security",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prestart": "npm run build",
    "pretest": "npm run setup:reports",
    "setup:reports": "node test/scripts/setup-reports.js",
    "prebenchmark": "npm run setup:reports",
    "preload:test": "npm run setup:reports",
    "prestress:test": "npm run setup:reports",
    "test": "jest --config jest.unit.config.js --coverage",
    "test:watch": "jest --config jest.unit.config.js --watch",
    "test:coverage": "jest --config jest.unit.config.js --coverage --coverageReporters=html && echo '报告已生成: reports/unit/coverage/index.html'",
    "test:unit": "cross-env NODE_ENV=test jest --config jest.unit.config.js --coverage",
    "test:integration": "cross-env NODE_ENV=test jest --config jest.integration.config.js --coverage",
    "test:e2e": "jest --config jest.unit.config.js --testPathPattern=\\.e2e\\.test\\.ts$ --coverage",
    "test:verbose": "jest --verbose",
    "test:clean": "jest --clearCache",
    "test:config": "jest --showConfig",
    "test:routes": "jest --config jest.unit.config.js test/unit/routes/ --coverage",
    "test:middleware": "jest --config jest.unit.config.js test/unit/middleware/ --coverage",
    "test:utils": "jest --config jest.unit.config.js test/unit/utils/ --coverage",
    "test:security": "jest --config jest.unit.config.js test/unit/middleware/security.test.ts test/unit/middleware/rateLimit.test.ts test/middleware/unit/compression.test.ts --coverage",
    "test:performance": "jest --testNamePattern=\"性能|压缩|速率\" --coverage",
    "security:audit": "npm audit --production",
    "security:check": "npm audit && npx snyk test",
    "docs:swagger": "node -e \"require('./src/middleware/swagger').validateSwaggerConfig()\"",
    "docs:generate": "node test/scripts/generate-swagger.js",
    "benchmark": "node test/scripts/benchmark.js",
    "stress:test": "node test/scripts/stress-test.js",
    "load:test": "node test/scripts/load-test.js",
    "performance:test": "npm run build && npm run benchmark && npm run stress:test && npm run test:concurrent",
    "test:concurrent": "cross-env NODE_ENV=test node test/scripts/enhanced-load-test.js",
    "test:peek": "cross-env NODE_ENV=test node test/scripts/peek-load-test.js",
    "test:full": "npm run test:unit && npm run test:integration && npm run test:concurrent",
    "monitor:start": "NODE_ENV=development node src/index.ts & echo $! > app.pid",
    "monitor:stop": "kill $(cat app.pid) && rm app.pid",
    "monitor:metrics": "curl http://localhost:3000/api/performance",
    "profile:memory": "node --inspect test/scripts/memory-profiler.js",
    "benchmark:middleware": "node test/scripts/middleware-benchmark.js",
    "profile": "node --prof src/index.js",
    "profile:analyze": "node --prof-process isolate*.log > profile.txt",
    "memory:check": "node test/scripts/memory-check.js",
    "cleanup": "node test/scripts/cleanup.js",
    "db:setup": "pwsh -ExecutionPolicy Bypass -File scripts\\dev\\setup-db.ps1",
    "db:start": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 start",
    "db:stop": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 stop",
    "db:status": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 status",
    "db:test": "node db/scripts/test-connection.js",
    "db:shell": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 shell",
    "db:app-shell": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 app-shell",
    "db:migrate": "node db/scripts/migrate.js",
    "db:seed": "node db/scripts/seed.js",
    "db:seed:devices": "node db/scripts/run-seed-devices.js",
    "db:seed:clean": "node db/scripts/seed.js --drop",
    "db:seed:devices:clean": "node db/scripts/run-seed-devices.js --drop",
    "db:express:start": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 express:start",
    "db:express:stop": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 express:stop",
    "db:express:logs": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 express:logs",
    "db:express:status": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 express:status",
    "db:express:open": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 express:open",
    "db:start-all": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 start-all",
    "db:stop-all": "pwsh -ExecutionPolicy Bypass -File db\\scripts\\db-manage.ps1 stop-all",
    "init:env": "pwsh -ExecutionPolicy Bypass -File scripts\\dev\\init-project.ps1"
  },
  "keywords": [
    "koa",
    "typescript",
    "template",
    "api",
    "security",
    "performance"
  ],
  "author": "tommy.he",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "benchmark": "^2.1.4",
    "chalk": "^5.6.2",
    "compression": "^1.7.5",
    "dotenv": "^17.2.3",
    "helmet": "^7.1.0",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "koa-compress": "^5.0.1",
    "koa-helmet": "8.0.3",
    "koa-ratelimit": "^5.0.3",
    "koa-router": "^14.0.0",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^5.10.3",
    "mongodb": "^7.0.0",
    "mongoose": "^9.0.2",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chalk": "^0.4.31",
    "@types/compression": "^1.7.5",
    "@types/jest": "^30.0.0",
    "@types/koa": "^3.0.1",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/koa-compress": "^4.0.2",
    "@types/koa-helmet": "6.1.0",
    "@types/koa-ratelimit": "^5.0.5",
    "@types/koa-router": "^7.4.9",
    "@types/koa-static": "^4.0.4",
    "@types/mongodb": "^4.0.6",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "autocannon": "^7.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "loadtest": "^6.0.0",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.1.11",
    "nyc": "^17.1.0",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
