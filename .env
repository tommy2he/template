# 应用配置
NODE_ENV=development
PORT=3000
APP_NAME=Koa Template App

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=dev

# API 配置
API_PREFIX=/api
API_VERSION=v1

# CORS 配置
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# 数据库配置 (MongoDB - 为1.5版本预留)
MONGODB_URI=mongodb://localhost:27017/koa_template_dev

# JWT 配置 (可选)
JWT_SECRET=dev_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# 开发工具配置
ENABLE_SWAGGER=true
DEBUG=true