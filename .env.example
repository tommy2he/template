# 应用配置
NODE_ENV=development
PORT=3000
APP_NAME=Koa Template App

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=combined

# API 配置
API_PREFIX=/api
API_VERSION=v1

# CORS 配置
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# 数据库配置 (MongoDB - 为1.5版本预留)
MONGODB_URI=mongodb://localhost:27017/koa_template
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DB_NAME=koa_template

# Redis 配置 (可选，为未来扩展预留)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT 配置 (可选，为身份验证预留)
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 文件上传配置
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# 应用特定配置
APP_URL=http://localhost:3000
API_TIMEOUT=30000
DEBUG=false

# 开发工具配置
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false