{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "启动开发服务器",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": ".*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "服务器启动成功",
          "endsPattern": "服务器停止"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
