# 测试环境配置 - 改为使用MongoMemoryServer
NODE_ENV=test
PORT=3001
APP_NAME=Koa Template App Test

# 日志配置
LOG_LEVEL=error  # 测试环境只显示错误
LOG_TO_FILE=false

# API配置
API_PREFIX=/api
API_VERSION=v1
SWAGGER_ENABLED=false  # 测试时关闭Swagger

# CORS配置
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# 数据库配置 - 使用MongoMemoryServer（会在运行时替换）
MONGODB_URI=mongodb://localhost:27017/koa_template_test
MONGODB_DB_NAME=koa_template_test

# 测试专用配置
RATE_LIMIT_ENABLED=false
HELMET_ENABLED=false
COMPRESSION_ENABLED=false
PERFORMANCE_MONITORING_ENABLED=false