{
  "name": "koa_template_app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,json --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "start:dev": "NODE_ENV=development node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prestart": "npm run build",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=html && start coverage/index.html",
    "test:unit": "jest --testPathPatterns=\\.test\\.ts$ --coverage",
    "test:integration": "jest --testPathPatterns=\\.integration\\.test\\.ts$ --coverage",
    "test:e2e": "jest --testPathPatterns=\\.e2e\\.test\\.ts$ --coverage",
    "test:verbose": "jest --verbose",
    "test:clean": "jest --clearCache",
    "test:config": "jest --showConfig",
    "test:routes": "jest test/routes/ --coverage",
    "test:middleware": "jest test/middleware/ --coverage",
    "test:utils": "jest test/utils/ --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^14.0.0",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chalk": "^0.4.31",
    "@types/jest": "^30.0.0",
    "@types/koa": "^3.0.1",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/koa-router": "^7.4.9",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "nodemon": "^3.1.11",
    "nyc": "^17.1.0",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
