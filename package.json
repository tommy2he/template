{
  "name": "koa_template_app",
  "version": "1.3.0",
  "description": "Koa模板应用 - 安全与性能增强版本",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,json --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "start:dev": "NODE_ENV=development node dist/index.js",
    "start:secure": "NODE_ENV=production node dist/index.js --security",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prestart": "npm run build",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=html && start coverage/index.html",
    "test:unit": "jest --testPathPattern=\\.test\\.ts$ --coverage",
    "test:integration": "jest --testPathPattern=\\.integration\\.test\\.ts$ --coverage",
    "test:e2e": "jest --testPathPattern=\\.e2e\\.test\\.ts$ --coverage",
    "test:verbose": "jest --verbose",
    "test:clean": "jest --clearCache",
    "test:config": "jest --showConfig",
    "test:routes": "jest test/routes/ --coverage",
    "test:middleware": "jest test/middleware/ --coverage",
    "test:utils": "jest test/utils/ --coverage",
    "test:security": "jest test/middleware/security.test.ts test/middleware/rateLimit.test.ts test/middleware/compression.test.ts --coverage",
    "test:performance": "jest --testNamePattern=\"性能|压缩|速率\" --coverage",
    "security:audit": "npm audit --production",
    "security:check": "npm audit && npx snyk test",
    "docs:swagger": "node -e \"require('./src/middleware/swagger').validateSwaggerConfig()\"",
    "docs:generate": "node scripts/generate-swagger.js",
    "benchmark": "node scripts/benchmark.js",
    "stress:test": "node scripts/stress-test.js",
    "performance:test": "npm run build && npm run benchmark && npm run stress:test",
    "load:test": "node scripts/load-test.js",
    "profile": "node --prof src/index.js",
    "profile:analyze": "node --prof-process isolate*.log > profile.txt",
    "memory:check": "node scripts/memory-check.js"
  },
  "keywords": [
    "koa",
    "typescript",
    "template",
    "api",
    "security",
    "performance"
  ],
  "author": "Your Name",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "compression": "^1.7.5",
    "dotenv": "^17.2.3",
    "helmet": "^7.1.0",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "koa-compress": "^5.0.1",
    "koa-helmet": "8.0.3",
    "koa-ratelimit": "^5.0.3",
    "koa-router": "^14.0.0",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^5.10.3",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chalk": "^0.4.31",
    "@types/compression": "^1.7.5",
    "@types/jest": "^30.0.0",
    "@types/koa": "^3.0.1",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/koa-compress": "^4.0.2",
    "@types/koa-helmet": "6.1.0",
    "@types/koa-ratelimit": "^5.0.5",
    "@types/koa-router": "^7.4.9",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "nodemon": "^3.1.11",
    "nyc": "^17.1.0",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
